<h2>Edit Question</h2><hr>

<div class="row">
	<div class="col-6 offset-3">	    
		<%= form_for @question, class: "field_with_errors" do |f| %>
		    <%= f.hidden_field :user_id, value: current_user.id %>
            <div class="form-group">
                <%= f.label :title %>
                <div class="input-group is-invalid"><%= f.text_field :title, size: "81", class: "form-control", id: "question_title" %></div>
                <div class="invalid-feedback"><%= @question.errors[:title].first %></div>
            </div>
            <div class="form-group">
                <%= f.label :content %>   
                <div class="input-group is-invalid"><%= f.text_area :content, rows: "10", cols: "80", class: "form-control", id: "question_content" %></div> 
                <div class="invalid-feedback"><%= @question.errors[:content].first %></div>
            </div>
            <div class="form-group">
                <%= f.label :tag_list %> (Separated by comma)
                <div class="input-group is-invalid"><%= f.text_field :tag_list, size: "81", class: "form-control", id: "question_tag_list", value: @question.tag_list.join(", ") %></div>
                <div class="invalid-feedback"><%= @question.errors[:tag_list].first %></div>
            </div>
            <div class="form-group">
                <%= f.label :image, "Attach image: " %>
                <%= f.file_field :image %>
                <div class="text-danger"><% if @question.errors[:image].any? %>File uploaded <%= @question.errors[:image].first %>.<% end %></div>
            </div>
		    <%= f.submit "Update Question", class: "btn btn-primary" %>
		<% end %>		
	</div>
</div>
